<main
  class="flex min-h-[40vh] min-w-[90vw] justify-center border-b-[4px] border-black bg-[#8c5be4]"
  id="contact"
>
  <section class="my-16 flex w-[55%] flex-col items-start justify-start">
    <div class="text-xl font-bold text-white">Like what you see?</div>
    <div class="text-sm text-white">
      Let’s chat then! I’m open to new & exciting opportunities
    </div>
    <div class="my-2 flex gap-4">
      <div
        class="shadow-bottom-right border-[2px] border-black bg-yellow-400 p-1"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-mail"
          ><rect width="20" height="16" x="2" y="4" rx="2"></rect><path
            d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg
